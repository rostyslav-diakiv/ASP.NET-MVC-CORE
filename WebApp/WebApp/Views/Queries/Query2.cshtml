
@model List<WebApp.Interfaces.ICommentModel>

@{
    ViewData["Title"] = "Query2";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Query2</h2>

<form asp-controller="Queries" asp-action="Query2" , method="get">
    <p>
        @*User id: <input type="number" name="userId">*@
        @Html.TextBox("userId")
        <input type="submit" value="User Id" />
    </p>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model[0].Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].PostId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].UserId)
            </th>
            <th>
                @*// TODO:
        @Html.DisplayNameFor(model => model[0].User.Name)*@
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].CreatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Likes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Body)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var com in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(m => com.Id)
                </td>
                <td>
                    <a asp-controller="Posts" asp-action="Details" asp-route-id="@com.PostId">@Html.DisplayFor(modelItem => com.PostId)</a>
                </td>
                <td>
                    <a asp-controller="Users" asp-action="Details" asp-route-id="@com.UserId">@Html.DisplayFor(modelItem => com.UserId)</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => com.CreatedAt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => com.Likes)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => com.Body)
                </td>
            </tr>
        }
    </tbody>
</table>