@model List<Tuple<int, string>>
@{
    ViewData["Title"] = "Query3";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Query #3</h2>

<form asp-controller="Queries" asp-action="Query3" , method="get">
    <p>
        @*User id: <input type="number" name="userId">*@
        @Html.TextBox("stringId")
        <input type="submit" value="User Id" />
    </p>
</form>

<h5>User Id:</h5>
<h5>@ViewData["UserId"]</h5>


<table class="table table-striped">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model[0].Item1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].Item2)
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var t in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(m => t.Item1)
            </td>
            <td>
                <a asp-controller="Todos" asp-action="Details" asp-route-id="@t.Item1">@Html.DisplayFor(modelItem => t.Item2)</a>
            </td>
        </tr>
    }
    </tbody>
</table>

